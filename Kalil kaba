    <script>
        function showPayment(botId) {
            const paymentDiv = document.getElementById(`payment-${botId}`);
            if (paymentDiv) {
                paymentDiv.classList.toggle('visible');
                paymentDiv.style.display = paymentDiv.classList.contains('visible') ? 'block' : 'none';
            } else {
                console.error(`Élément payment-${botId} non trouvé`);
            }
        }

        function payWithPaypal(botName, price) {
            alert(`Paiement PayPal pour ${botName} - $${price}. Redirection vers PayPal...`);
            // Pour une intégration réelle, utilisez le SDK PayPal ici
        }

        function payWithCrypto(botName, price) {
            const yourCryptoAddress = "VOTRE_ADRESSE_CRYPTO_ICI"; // Remplacez par une adresse réelle
            alert(`Paiement Crypto pour ${botName} - $${price}. Veuillez envoyer à cette adresse: ${yourCryptoAddress}`);
            // Pour une intégration avancée, générez une adresse unique ou un QR code
        }

        // Initialisation : cacher les options de paiement au chargement
        document.querySelectorAll('.payment-options').forEach(div => {
            div.style.display = 'none';
        });
    </script>
